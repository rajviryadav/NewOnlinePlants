
@{
    ViewBag.Title = "Mazz Global - Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/JS/angular.min.js"></script>
<script src="~/JS/Account.js"></script>
<link href="~/css/custom.css" rel="stylesheet" />

<!-- Titlebar
================================================== -->
<div id="titlebar" class="single">
    <div class="container">

        <div class="sixteen columns">
            <h2>My Account</h2>
            <nav id="breadcrumbs">
                @*<ul>
                        <li>You are here:</li>
                        <li><a href="#">Home</a></li>
                        <li>My Account</li>
                    </ul>*@
            </nav>
        </div>

    </div>
</div>


<div class="container" ng-app="Account" ng-controller="Login">

    <div class="my-account" ngCloak>

        <div class="tab-content1" id="tab1" style="display: none; display:inline;">
            <div id="login">
                <h3 class="margin-bottom-10 margin-top-10">Login</h3>

                <div class="login">
                    <p class="form-row form-row-wide">
                        <label for="username">Email Address:</label>
                        <input type="text" class="input-text" name="username" id="username" value="" ng-model="Username" ng-blur="fn_CheckOnBlur(1)" />
                        <span class="required" ng-bind="lblUsername"></span>
                    </p>

                    <p class="form-row form-row-wide">
                        <label for="password">Password:</label>
                        <input class="input-text" type="password" name="password" id="password" ng-model="Password" ng-blur="fn_CheckOnBlur(2)" maxlength="12" />
                        <span class="required" ng-bind="lblPassword"></span>
                    </p>

                    <p class="form-row form-row-wide">
                        <label for="reg_password2" class="required" ng-bind="message"></label>
                    </p>

                    <p class="form-row">
                        <input type="submit" class="button" name="login" value="Login" style="width:100%;" ng-click="fn_LoginCallBack()" id="cmd_Login" />


                    </p>

                    <p class="form-row">
                        @*<label for="rememberme" class="rememberme" style="float:left;">
                                <input name="rememberme" type="checkbox" id="rememberme" value="forever" /> Remember Me
                            </label>*@
                        <label for="rememberme" class="rememberme" style="float:right;">
                            <a href="Javascript:" onclick="ShowForget()">Forgot Password?</a>
                        </label>


                    </p>


                </div>


            </div>

            <div id="forgetpassword">
                <h3 class="margin-bottom-10 margin-top-10">Forget Password</h3>
                <div class="login">
                    <p class="form-row form-row-wide">
                        <label for="username">Email Address:</label>
                        <input type="text" class="input-text" name="username" id="Forgetusername" value="" ng-model="FUsername" />
                    </p>

                    <p class="form-row form-row-wide">
                        <label for="reg_password2" class="required">{{Rmessage}}</label>
                    </p>

                    <p class="form-row">
                        <input type="submit" class="button" name="login" value="Submit" style="width:100%;" ng-click="fn_FP_Validation()" id="cmd_Login" />


                    </p>

                    <p class="form-row">
                        <label for="rememberme" class="rememberme" style="float:left;">

                        </label>
                        <label for="rememberme" class="rememberme" style="float:right;">
                            <a href="Javascript:" onclick="ShowLogin()">Login?</a>
                        </label>


                    </p>


                </div>
            </div>


        </div>


    </div>


</div>

<img src="~/images/ajax-loading.gif" class="loader" />




<script src="~/scripts/jquery-2.1.3.min.js"></script>

<script type="text/javascript">

    $(document).ready(function () {
        $('#forgetpassword').hide();

    })


    $('#cmd_login').click(function () {

        $('#tab1').show();

    });

    function ShowForget() {
        $('#forgetpassword').show();
        $('#login').hide();
        $('#footer').addClass("move-footer-bottom");

        $('#username').val("")
        $('#password').val("")
    }

    function ShowLogin() {
        $('#forgetpassword').hide();
        $('#login').show();
        $('#Forgetusername').val("");
        $('#footer').removeClass("move-footer-bottom");
    }

    $(document).keypress(function (e) {
        if (e.which == 13) {
            $('#cmd_Login').click();
        }


    });

</script>