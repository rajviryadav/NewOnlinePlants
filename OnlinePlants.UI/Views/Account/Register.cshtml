
@{
    ViewBag.Title = "Online Plants - Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .tabs-nav li {
        /*width: 33.3%;*/
    }
</style>


<link href="~/css/custom.css" rel="stylesheet" />
<!-- Titlebar
================================================== -->
<div id="titlebar" class="single">
    <div class="container">
        <div class="sixteen columns">
            <h2>My Account</h2>            
        </div>
    </div>
</div>


<div class="container" ng-app="angularRecaptcha" ng-controller="recapCtrl as recap">

    <div class="my-account" style="width:606px !important; ">

        <h3 class="margin-bottom-10 margin-top-10">SIGN UP</h3>     

        <div class="tabs-container">
            <div class="tab-content" id="tab1">
                <form name="recap.signupForm" ng-submit="recap.fn_ValidateForm()" novalidate>
                    <p class="form-row form-row-wide" id="fieldCom">
                        <label for="reg_name">Name:</label>
                        <input type="text" class="input-text" name="Name" id="Name" value="" ng-model="recap.Name" required ng-blur="recap.fn_ValidateOnleave(1)" />
                        <span class="required">{{recap.lblName}}</span>
                    </p>
                    <p class="form-row form-row-wide">
                        <label for="reg_email">Email Address:</label>
                        <input type="text" class="input-text" name="email" id="reg_email" value="" ng-model="recap.Email" required ng-blur="recap.fn_ValidateOnleave(2)" ng-pattern="emailFormat" />
                        <span class="required">{{recap.lblEmail}}</span>
                    </p>                    

                    <p class="form-row form-row-wide">
                        <label for="reg_password">Password:</label>
                        <input type="password" class="input-text" name="password" id="reg_password" ng-model="recap.Password" required maxlength="12" ng-blur="recap.fn_ValidateOnleave(3)" />
                        <span class="required">{{recap.lblPassword}}</span>
                        <span class="required" id="lblPasswordValidation">
                            {{recap.lblPasswordValidation}}
                        </span>
                    </p>

                    <p class="form-row form-row-wide">
                        <label for="reg_password2">Repeat Password:</label>
                        <input type="password" class="input-text" name="password" id="reg_password2" ng-model="recap.rPassword" required maxlength="12" ng-blur="recap.fn_ValidateOnleave(4)" />
                        <span class="required">{{recap.lblRepeatpassword}}</span>
                    </p>

                    <p class="form-row form-row-wide">
                        <div vc-recaptcha key="recap.publicKey"></div>
                    </p>
                    <button type="submit" class="btn btn-default " style="width:100%;">Sign up</button>
                </form>
            </div>
        </div>
    </div>
</div>


<img src="~/images/ajax-loading.gif" class="loader" />


@section script
{

    <script src="https://www.google.com/recaptcha/api.js?onload=vcRecaptchaApiLoaded&render=explicit" async defer></script>
    <script src="~/JS/angular.min.js"></script>
    <script src="~/scripts/angular-recaptcha.min.js"></script>
    <script src="~/JS/Register.js"></script>


    <script>
        $(document).ready(function () {
            $('#cmd_employer').addClass('active');
        });
    </script>
}


